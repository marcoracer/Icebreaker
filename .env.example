# Snowflake Configuration
# Copy this file to .env and fill in your actual values

# Account Configuration
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_ROLE=your_default_role
SNOWFLAKE_WAREHOUSE=your_default_warehouse
SNOWFLAKE_DATABASE=your_default_database
SNOWFLAKE_SCHEMA=your_default_schema

# Authentication
# Choose one of the following authentication methods:

# Option 1: Private Key Authentication (Recommended for production)
SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/your/private_key.pem
# OR embed private key directly (less secure)
# SNOWFLAKE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
# YOUR_PRIVATE_KEY_CONTENTS
# -----END PRIVATE KEY-----

# Option 2: Password Authentication (for development)
SNOWFLAKE_PASSWORD=your_password

# Option 3: External Browser Authentication (interactive)
# SNOWFLAKE_AUTHENTICATOR=externalbrowser

# Option 4: OAuth (for SSO/SSO integration)
# SNOWFLAKE_AUTHENTICATOR=oauth
# SNOWFLAKE_TOKEN=your_oauth_token

# Icebreaker Configuration
ICEBREAKER_SAFE_MODE=true
ICEBREAKER_QUERY_TIMEOUT=300
ICEBREAKER_MAX_QUERY_RESULTS=10000
ICEBREAKER_AUDIT_LOGGING=true

# Logging
ICEBREAKER_LOG_LEVEL=INFO
ICEBREAKER_LOG_FORMAT=json

# Development Settings
ICEBREAKER_DEBUG=false
ICEBREAKER_ENVIRONMENT=development